<!DOCTYPE html>
<html lang="bn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Report Verification System</title>
    <style>
        :root {
            --primary-color: #0d47a1;
            --secondary-color: #1b5e20;
            --bg-color: #f0f4f8;
            --text-color: #333;
        }

        * {
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            margin: 0;
            background-color: var(--bg-color);
            color: var(--text-color);
        }

        /* Header Styling */
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: white;
            padding: 20px 40px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
            flex-wrap: wrap;
            gap: 20px;
        }

        .company-name {
            font-size: 32px;
            font-weight: 800;
            color: var(--primary-color);
            text-transform: uppercase;
        }

        .company-info {
            display: flex;
            align-items: center;
            gap: 20px;
            text-align: right;
        }

        .info-text {
            font-size: 14px;
            line-height: 1.6;
            color: #555;
        }

        .info-text strong {
            color: var(--primary-color);
        }

        .logo-box img {
            width: 80px;
            height: 80px;
            object-fit: contain;
            border-radius: 8px;
            border: 1px solid #ddd;
        }

        /* Main Verification Area */
        .container {
            max-width: 850px;
            margin: 50px auto;
            background: white;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 15px 30px rgba(0,0,0,0.08);
        }

        .title {
            text-align: center;
            color: var(--primary-color);
            margin-bottom: 30px;
            font-size: 26px;
            font-weight: bold;
            border-bottom: 2px dashed #ccc;
            padding-bottom: 15px;
        }

        .search-area {
            display: flex;
            gap: 15px;
            margin-bottom: 30px;
        }

        .search-area input {
            flex: 1;
            padding: 15px 20px;
            font-size: 16px;
            border: 2px solid #ddd;
            border-radius: 8px;
            outline: none;
            transition: 0.3s;
        }

        .search-area input:focus {
            border-color: var(--primary-color);
        }

        .search-area button {
            padding: 15px 35px;
            background-color: var(--primary-color);
            color: white;
            font-size: 18px;
            font-weight: bold;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: 0.3s;
            box-shadow: 0 4px 6px rgba(13, 71, 161, 0.2);
        }

        .search-area button:hover {
            background-color: #082f6b;
            transform: translateY(-2px);
        }

        /* Result Section */
        .result-box {
            display: none;
            position: relative;
            background: #fafafa;
            border: 1px solid #e0e0e0;
            border-radius: 12px;
            padding: 30px;
            overflow: hidden;
        }

        /* Stylish Verified Stamp */
        .verified-stamp {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(-25deg);
            font-size: 65px;
            font-weight: 900;
            color: rgba(27, 94, 32, 0.15);
            text-transform: uppercase;
            border: 8px solid rgba(27, 94, 32, 0.15);
            padding: 15px 40px;
            border-radius: 15px;
            pointer-events: none;
            z-index: 10;
            letter-spacing: 5px;
        }

        .result-content {
            display: flex;
            gap: 30px;
            position: relative;
            z-index: 2;
            flex-wrap: wrap;
        }

        .result-image {
            flex: 1;
            min-width: 250px;
        }

        .result-image img {
            width: 100%;
            border-radius: 8px;
            border: 3px solid #eee;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .result-details {
            flex: 1.5;
            min-width: 250px;
        }

        .badge {
            display: inline-block;
            background: var(--secondary-color);
            color: white;
            padding: 6px 15px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(27, 94, 32, 0.3);
        }

        .result-details p {
            margin: 10px 0;
            font-size: 16px;
            border-bottom: 1px solid #eee;
            padding-bottom: 8px;
        }

        .result-details strong {
            display: inline-block;
            width: 130px;
            color: var(--primary-color);
        }

        .error-msg {
            display: none;
            text-align: center;
            color: #d32f2f;
            font-size: 18px;
            font-weight: bold;
            background: #ffebee;
            padding: 15px;
            border-radius: 8px;
            margin-top: 20px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            header {
                flex-direction: column;
                text-align: center;
                justify-content: center;
            }
            .company-info {
                flex-direction: column-reverse;
                text-align: center;
            }
            .search-area {
                flex-direction: column;
            }
            .verified-stamp {
                font-size: 40px;
                border-width: 5px;
            }
        }
    </style>
</head>
<body>

    <!-- Header Section -->
    <header>
        <div class="company-name">মুন চৌধুরী অ্যান্ড অ্যাসোসিয়েটস</div>
        <div class="company-info">
            <div class="info-text">
                <strong>ঠিকানা:</strong> চট্টগ্রাম, বাংলাদেশ<br>
                <strong>ফোন:</strong> +880 1XXX-XXXXXX<br>
                <strong>ইমেইল:</strong> info@moonchy.com<br>
                <strong>ওয়েবসাইট:</strong> www.moonchy.com
            </div>
            <div class="logo-box">
                <!-- লোগো আপলোড করে এখানে নাম দিন -->
                <img src="logo.png" alt="Company Logo" onerror="this.src='https://via.placeholder.com/80?text=Logo'">
            </div>
        </div>
    </header>

    <!-- Verification System Section -->
    <div class="container">
        <div class="title">ডিজিটাল রিপোর্ট ভেরিফিকেশন প্যানেল</div>
        
        <div class="search-area">
            <input type="text" id="reportId" placeholder="রিপোর্ট বা ট্র্যাকিং নম্বর লিখুন (যেমন: REP-1001)">
            <button onclick="verifyReport()">Verify</button>
        </div>

        <div id="errorBox" class="error-msg">দুঃখিত! এই নম্বরের কোনো বৈধ রিপোর্ট সিস্টেমে পাওয়া যায়নি।</div>

        <div id="resultBox" class="result-box">
            <div class="verified-stamp">Verified</div>
            <div class="result-content">
                <div class="result-image">
                    <img id="resImage" src="" alt="Report Document">
                </div>
                <div class="result-details">
                    <div class="badge">✔ AUTHENTIC REPORT</div>
                    <p><strong>রিপোর্ট নং:</strong> <span id="resId"></span></p>
                    <p><strong>ক্লায়েন্টের নাম:</strong> <span id="resName"></span></p>
                    <p><strong>ইস্যুর তারিখ:</strong> <span id="resDate"></span></p>
                    <p><strong>রিপোর্টের ধরন:</strong> <span id="resType"></span></p>
                    <p><strong>স্ট্যাটাস:</strong> <b id="resStatus" style="color: green;"></b></p>
                    <p><strong>মন্তব্য:</strong> <span id="resNote"></span></p>
                </div>
            </div>
        </div>
    </div>

    <script>
        async function verifyReport() {
            const inputId = document.getElementById('reportId').value.trim();
            const resultBox = document.getElementById('resultBox');
            const errorBox = document.getElementById('errorBox');
            
            if(!inputId) {
                alert('অনুগ্রহ করে একটি রিপোর্ট নম্বর দিন।');
                return;
            }

            try {
                // JSON ফাইল থেকে ডেটা নিয়ে আসা হচ্ছে
                const response = await fetch('data.json');
                const data = await response.json();
                
                // ডেটার সাথে ইনপুট মেলানো
                const report = data.reports.find(r => r.id === inputId);
                
                if(report) {
                    // মিলে গেলে ভেরিফাইড ডেটা এবং ইমেজ শো করা
                    document.getElementById('resId').innerText = report.id;
                    document.getElementById('resName').innerText = report.clientName;
                    document.getElementById('resDate').innerText = report.issueDate;
                    document.getElementById('resType').innerText = report.reportType;
                    document.getElementById('resStatus').innerText = report.status;
                    document.getElementById('resNote').innerText = report.note;
                    document.getElementById('resImage').src = report.imageUrl;
                    
                    errorBox.style.display = 'none';
                    resultBox.style.display = 'block';
                } else {
                    // না মিললে এরর দেখানো
                    resultBox.style.display = 'none';
                    errorBox.style.display = 'block';
                }
            } catch (error) {
                alert('সিস্টেম এরর! data.json ফাইলটি ঠিকভাবে আপলোড হয়েছে কিনা চেক করুন।');
                console.error(error);
            }
        }
    </script>
</body>
</html>
